= form_for @treasure do |f|
  .form-group
    = f.label :railscast
    = f.select :railscast_id, options_for_select(@railscasts.map{|r| [ r.complete_name, r.id, {'data-image' => r.image_url }]}), { prompt: 'Select Railscast'}, style: "width: 100%"
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :time
    = f.time_select :time, discard_hour: true, include_seconds: true
    %p.help-block Set the time (mm:ss) when the tip is shown in the video
  .form-group
    = f.label :tag_list
    = f.text_field :tag_list, style: "width:100%", data: { tags: "#{available_tags}" }
  .actions
    .pull-right
      = f.submit 'Save', class: 'btn btn-flat flat-inverse btn-rounded'
      = link_to 'Cancel', :back , class: 'btn btn-warning'
