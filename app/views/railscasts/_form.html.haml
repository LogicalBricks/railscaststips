= form_for @railscast do |f|
  - if @railscast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@railscast.errors.count, "error")} prohibited this railscast from being saved:"
      %ul
        - @railscast.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :pro
    = f.check_box :pro
  .field
    = f.label :revised
    = f.check_box :revised
  .actions
    = f.submit 'Save'
