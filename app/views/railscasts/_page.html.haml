.page
  - railscasts.each_slice(4) do |railscasts_block|
    .row
      - railscasts_block.each do |railscast|
        .col-md-3
          .thumbnail
            = link_to image_tag(railscast.image_url), railscast
            .caption
              %h4
                = railscast.complete_name
                = "(#{railscast.treasures.count})"
              = link_to railscast.url, class: 'btn btn-danger btn-sm btn-block' do
                %i.icon-link
                RailsCast Link
              %p
                = link_to railscast, class: 'btn btn-warning btn-sm btn-block' do
                  %i.icon-play-sign
                  Tips
